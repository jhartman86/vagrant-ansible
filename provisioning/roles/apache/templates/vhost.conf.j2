<VirtualHost *:80>
    ServerAdmin webmaster@localhost
    ServerName {{ item.servername }}
    DocumentRoot {{ item.docroot }}
    ServerAlias {{ item.serveralias }}

{% for env_var in item.env_vars %}
    SetEnv {{ env_var.name }} {{ env_var.value }}
{% endfor %}

    <Directory {{ item.docroot }}>
        AllowOverride All
        Require all granted
    </Directory>
</VirtualHost>